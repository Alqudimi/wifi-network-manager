# Backend Environment Variables
# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production-2024
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-2024
FLASK_ENV=development

# Database Configuration
# For PostgreSQL (Production)
DATABASE_URL=postgresql://wifi_user:wifi_password_2024@localhost:5432/wifi_network_db

# For SQLite (Development) - comment out DATABASE_URL above and uncomment below
# DATABASE_URL=sqlite:///wifi_manager.db

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Router API Configuration
MIKROTIK_API_PORT=8728
UBIQUITI_API_PORT=443
CISCO_API_PORT=22

# Security Settings
WTF_CSRF_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (Optional - for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# External Services (Optional)
# CAPTIVE_PORTAL_URL=http://localhost:5000/captive
# RADIUS_SERVER=192.168.1.100
# RADIUS_SECRET=shared-secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/wifi_manager.log

# Network Configuration
DEFAULT_SESSION_TIMEOUT=86400
DEFAULT_DATA_LIMIT_MB=1024
DEFAULT_BANDWIDTH_LIMIT_MBPS=10

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@wifi-manager.local

# SSL/HTTPS Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# FORCE_HTTPS=true

# Development Settings
DEBUG=false
TESTING=false

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=86400
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/var/backups/wifi-manager

# Monitoring and Analytics
# ANALYTICS_ENABLED=true
# METRICS_ENDPOINT=/metrics
# HEALTH_CHECK_ENDPOINT=/health

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_STORAGE=redis://localhost:6379/1

# Internationalization
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=wifi_manager:

# API Configuration
API_VERSION=v1
API_TITLE=WiFi Network Manager API
API_DESCRIPTION=API for managing WiFi networks and vouchers

# QR Code Configuration
QR_CODE_SIZE=10
QR_CODE_BORDER=4
QR_CODE_ERROR_CORRECTION=L

# Voucher Configuration
VOUCHER_CODE_LENGTH=8
VOUCHER_CODE_CHARS=ABCDEFGHIJKLMNPQRSTUVWXYZ23456789
DEFAULT_VOUCHER_DURATION_HOURS=24
MAX_VOUCHERS_PER_BATCH=1000

# Network Configuration
MAX_NETWORKS=50
MAX_ROUTERS=20
CONNECTION_TIMEOUT=10
API_TIMEOUT=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Performance Configuration
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=20
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_ECHO=false

# Celery Configuration (for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/2
# CELERY_RESULT_BACKEND=redis://localhost:6379/3
# CELERY_TASK_SERIALIZER=json
# CELERY_RESULT_SERIALIZER=json
